<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Мессенджер</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SecondTestApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="list-group" style="width: 18rem;">
            <button type="button" class="list-group-item list-group-item-action active">
                Меню:
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Пользователи</a>
            </button>   
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="CreateUser">Регистрация</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Index">Войти</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Chats" asp-action="Index">Все чаты</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">
                <a class="nav-link text-dark" asp-area="" asp-controller="Chats" asp-action="CreateChat">Добавить чат</a>
            </button>
            <button type="button" class="list-group-item list-group-item-action">Morbi leo risus</button>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SecondTestApp.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
